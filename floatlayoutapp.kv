<Button>:
    font_size: 30
    color: 0.0, 0.9, 0.0, 1
<FloatLayout>:
    Button:
        pos_hint: { "x": 0.9, "top": 1 }
        size_hint: 0.1, 0.1
        text: "X" if btn.state == "normal" and btns.state == "normal" else "000"
        background_color: 0.0, 0.5, 0.9, 1 
    Button:
        id: btn
        pos_hint: { "y": 0.3, "x": 0.5/2 }
        size_hint: 0.5, 0.2
        background_color: 0.0, 0.5, 0.2, 1 
        text: "Login"
    Button:
        id: btns
        pos_hint: { "y": 0.1, "x": 0.5/2 }
        size_hint: 0.5, 0.2
        background_color: 0.0, 0.5, 0.2, 1 
        text: "Cancel"
